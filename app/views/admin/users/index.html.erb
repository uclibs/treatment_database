<div class="header">
  <h1>Users</h1>
	<%= link_to 'Add New User', new_admin_user_path, class: "btn btn-primary" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
	  <% @users.each do |user| %>
		  <tr>
			  <td><%= user.id %></td>
        <td><%= link_to user.display_name,edit_admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
  		</tr>
  	<% end %>
	</tbody>
</table>

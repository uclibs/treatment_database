<h1>Create New User</h1>

<%= form_for User.new , :url => {:action => "create_user"} do |user| %>
  <div class="field form-group">
    <%= user.label :display_name %>
    <%= user.text_field :display_name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= user.label :email %>
    <%= user.text_field :email, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= user.label :password %>
    <%= user.text_field :password, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= user.label :password_confirmation %>
    <%= user.text_field :password_confirmation, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= user.label :role %>
		<%= user.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}, {}, {:class=>'form-control'}) %>
  </div>

  <div class="field form-check">
		<%= user.check_box :account_active, class: 'form-check-input' %>
    <%= user.label :account_active, class: 'form-check-label' %>
  </div>


  <div class="actions">
    <%= user.submit class: 'btn btn-primary'%>
  </div>
<% end %>

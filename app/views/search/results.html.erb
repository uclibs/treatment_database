<h2>Searching for <strong><%= @search_string %></strong></h2>
<% if @records && @records.count > 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Call number</th>
        <th>Item record number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @records.each do |conservation_record| %>
        <tr>
          <td><%= conservation_record.title %></td>
          <td><%= conservation_record.author %></td>
          <td><%= conservation_record.call_number %></td>
          <td><%= conservation_record.item_record_number %></td>
          <td><%= link_to 'Show', conservation_record %></td>
          <td><%= link_to 'Edit', edit_conservation_record_path(conservation_record) %></td>
          <td><%= link_to 'Destroy', conservation_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-results">
    <center>
      <h4>No Results for <strong><%= @search_string %></strong>
    </center>
  </div>
<% end %>
